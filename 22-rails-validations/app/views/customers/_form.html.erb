<% if flash[:errors] %>
    <ul style="color: red;"> 
        <% flash[:errors].each do |error| %>
            <li> <%= error %> </li>
        <% end %>
    </ul>
<% end %>

<%= form_for @customer do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.collection_check_boxes :restaurant_ids, @restaurants, :id, :name %>
<%= f.submit %>
<% end %>